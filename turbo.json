{
	"$schema": "https://turborepo.org/schema.json",
	"globalDependencies": [
		"tsconfig.json"
	],
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true,
			"env": [
				"BETTER_AUTH_SECRET",
				"DATABASE_URL",
				"GEOAPIFY",
				"JWT_SECRET",
				"ORIGIN",
				"S3_API",
				"S3_KEY",
				"S3_SECRET",
				"S3_BUCKET",
				"UPSTASH_REDIS_REST_TOKEN",
				"UPSTASH_REDIS_REST_URL",
				"VITE_API",
				"VITE_ASSET_BASE"
			]
		},
		"preview": {
			"cache": false,
			"persistent": true,
			"env": [
				"BETTER_AUTH_SECRET",
				"DATABASE_URL",
				"GEOAPIFY",
				"JWT_SECRET",
				"ORIGIN",
				"S3_API",
				"S3_KEY",
				"S3_SECRET",
				"S3_BUCKET",
				"UPSTASH_REDIS_REST_TOKEN",
				"UPSTASH_REDIS_REST_URL",
				"VITE_API",
				"VITE_ASSET_BASE"
			]
		},
		"typecheck": {
			"inputs": [
				"src/**",
				"tsconfig.json"
			],
			"outputs": [],
			"outputLogs": "new-only",
			"cache": false
		},
		"build": {
			"dependsOn": [
				"^build"
			],
			"inputs": [
				"src/**",
				"package.json",
				"rollup.config.*"
			],
			"outputs": [
				"dist/**",
				"build/**"
			],
			"cache": false,
			"env": [
				"BETTER_AUTH_SECRET",
				"DATABASE_URL",
				"GEOAPIFY",
				"JWT_SECRET",
				"ORIGIN",
				"S3_API",
				"S3_KEY",
				"S3_SECRET",
				"S3_BUCKET",
				"UPSTASH_REDIS_REST_TOKEN",
				"UPSTASH_REDIS_REST_URL",
				"VITE_API",
				"VITE_ASSET_BASE"
			]
		},
		"translations": {
			"inputs": [
				"src/**"
			],
			"outputs": [
				"src/translation/**"
			],
			"cache": false
		},
		"sdk": {
			"cache": false,
			"env": [
				"VITE_API"
			]
		}
	}
}
